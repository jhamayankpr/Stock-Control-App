// server/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mongodb" // Change this line
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String @unique
  name     String
  email    String @unique
  password String
}

model Products {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  productId     String      @unique
  name          String
  price         Float
  rating        Float?
  stockQuantity Int
  Sales         Sales[]
  Purchases     Purchases[]
}

model Sales {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  saleId      String   @unique
  productId   String
  timestamp   DateTime
  quantity    Int
  unitPrice   Float
  totalAmount Float
  product     Products @relation(fields: [productId], references: [productId])
}

model Purchases {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  purchaseId String   @unique
  productId  String
  timestamp  DateTime
  quantity   Int
  unitCost   Float
  totalCost  Float
  product    Products @relation(fields: [productId], references: [productId])
}

model Expenses {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expenseId String   @unique
  category  String
  amount    Float
  timestamp DateTime
}

model SalesSummary {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  salesSummaryId String   @unique
  totalValue     Float
  changePercentage Float?
  date           DateTime
}

model PurchaseSummary {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  purchaseSummaryId String   @unique
  totalPurchased    Float
  changePercentage  Float?
  date              DateTime
}

model ExpenseSummary {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  expenseSummaryId  String              @unique
  totalExpenses     Float
  date              DateTime
  ExpenseByCategory ExpenseByCategory[]
}

model ExpenseByCategory {
  id                  String       @id @default(auto()) @map("_id") @db.ObjectId
  expenseByCategoryId String       @unique
  expenseSummaryId    String
  category            String
  amount              BigInt
  date                DateTime
  expenseSummary      ExpenseSummary @relation(fields: [expenseSummaryId], references: [expenseSummaryId])
}